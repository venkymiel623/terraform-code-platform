pipeline {
    agent any
    
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AKIA6ODU3HXRMTDTGUBL')
        AWS_SECRET_ACCESS_KEY = credentials('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')
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository using the specified credentials
                git credentialsId: 'git-access', url: 'https://github.com/venkymiel623/terraform-code-platform.git'
            }
        }
        
        stage('Terraform Init') {
            steps {
                // Initialize Terraform
                sh 'terraform init'
            }
        }
        
        stage('Terraform Plan') {
            steps {
                // Generate Terraform plan
                sh 'terraform plan -out=tfplan'
            }
        }
        
        stage('Terraform Apply') {
            steps {
                // Apply Terraform changes
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }
}

